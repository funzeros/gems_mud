{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": false,
    "target": "es2016",
    "useDefineForClassFields": false,
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "lib": ["esnext", "dom"],
    "forceConsistentCasingInFileNames": true,
    "types": [],
    "rootDir": ".",
    "typeRoots": ["./node_modules/@types", "./src/types", ".src/packages"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/*.ts", "src/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
